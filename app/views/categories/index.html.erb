<% @page_title = "Categories" %>
<% @page_tagline = "Find prayer requests by category" %>
<br />
<% @categories.each do |category| %>
<h3><%= link_to category.name, category %> <% if can? :update, @category %> | <%= link_to 'Edit', edit_category_path(category) %> <% end %><% if can? :delete, @category %>| <%= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :destroy %> <% end %></h3>
<% end %>



<% if can? :create, @category %>
<p>
<%= link_to 'New Category', new_category_path %>
</p>
<% end %>

