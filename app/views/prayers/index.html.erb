<% @page_title = "Prayer Requests" %>
<h1>Latest Prayer Requests</h1>

<table>
  <tr>
    <th>Request</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prayers.each do |prayer| %>
<p style="border:1px solid #ccc;padding:8px;"><img src="<%= avatar_url(prayer.user) %>" style="float:left;margin-right:10px;margin-bottom:10px;" /><%= prayer.request %>
    <% if user_signed_in? %><% if current_user.id == prayer.user.id %><br />
    <%= link_to 'Edit This Request', edit_prayer_path(prayer) %>
    
    <% end %><% end %> <br style="clear:both;" /></p>

  
<% end %>
</table>
<br />
<hr />
<%= will_paginate @prayers %>

<br />

<% if can? :create, Prayer %><%= link_to 'New Prayer', new_prayer_path %><% end %>
